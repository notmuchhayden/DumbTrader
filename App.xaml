<Application x:Class="DumbTrader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <!-- Color tokens -->
        <Color x:Key="Color.Background">#0F1418</Color>
        <Color x:Key="Color.Sidebar">#12181E</Color>
        <Color x:Key="Color.Card">#172027</Color>
        <Color x:Key="Color.CardAlt">#18232B</Color>
        <Color x:Key="Color.Border">#20303A</Color>
        <Color x:Key="Color.TextPrimary">#E8ECEF</Color>
        <Color x:Key="Color.TextSecondary">#9BA7B2</Color>
        <Color x:Key="Color.Green">#10D48A</Color>
        <Color x:Key="Color.Red">#FF5A5A</Color>
        <Color x:Key="Color.Accent">#2A8AF6</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}" />
        <SolidColorBrush x:Key="Brush.Sidebar" Color="{StaticResource Color.Sidebar}" />
        <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Color.Card}" />
        <SolidColorBrush x:Key="Brush.CardAlt" Color="{StaticResource Color.CardAlt}" />
        <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}" />
        <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}" />
        <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}" />
        <SolidColorBrush x:Key="Brush.Green" Color="{StaticResource Color.Green}" />
        <SolidColorBrush x:Key="Brush.Red" Color="{StaticResource Color.Red}" />
        <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}" />

        <!-- Typography -->
        <Style x:Key="TitleLarge" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="Heading" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="TextOptions.TextFormattingMode" Value="Display" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextSecondary}" />
            <Setter Property="FontSize" Value="13" />
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <Style x:Key="ValueGreen" TargetType="TextBlock" BasedOn="{StaticResource ValueText}">
            <Setter Property="Foreground" Value="{StaticResource Brush.Green}" />
        </Style>

        <Style x:Key="ValueRed" TargetType="TextBlock" BasedOn="{StaticResource ValueText}">
            <Setter Property="Foreground" Value="{StaticResource Brush.Red}" />
        </Style>

        <!-- Sidebar navigation (ListBox) -->
        <Style x:Key="NavListBox" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
        </Style>

        <Style x:Key="NavListBoxItem" TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bg"
                                Background="Transparent"
                                CornerRadius="6">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#21303A" />
                                <Setter Property="Foreground" Value="{StaticResource Brush.TextPrimary}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#1B2730" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Stock card -->
        <Style x:Key="StockCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="{StaticResource Color.Card}" Offset="0" />
                        <GradientStop Color="{StaticResource Color.CardAlt}" Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
        </Style>

        <!-- Simple sparkline styles -->
        <Style x:Key="SparklineUp" TargetType="Path">
            <Setter Property="Stroke" Value="{StaticResource Brush.Green}" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Opacity" Value="0.9" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <Style x:Key="SparklineDown" TargetType="Path" BasedOn="{StaticResource SparklineUp}">
            <Setter Property="Stroke" Value="{StaticResource Brush.Red}" />
        </Style>
    </Application.Resources>
</Application>
