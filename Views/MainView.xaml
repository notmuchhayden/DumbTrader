                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="AOGN" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="+0.7%" Style="{StaticResource ValueGreen}" Margin="0,6,0,0"/>
                        </StackPanel>
                        <Viewbox Grid.Column="1" Margin="16,0,0,0" Height="52">
                            <Path Style="{StaticResource SparklineUp}" Data="M0,42 L20,34 L40,36 L60,26 L80,18 L100,16"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <!-- Row2 -->
                <Border Style="{StaticResource StockCard}" Margin="0,0,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="TSLA" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
