                        </StackPanel>
                        <Viewbox Grid.Column="1" Margin="16,0,0,0" Height="52">
                            <Path Style="{StaticResource SparklineDown}" Data="M0,10 L20,16 L40,18 L60,28 L80,34 L100,38"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource StockCard}" Margin="0,0,16,16">
