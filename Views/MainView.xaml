                        <Viewbox Grid.Column="1" Margin="16,0,0,0" Height="52">
                            <Path Style="{StaticResource SparklineUp}" Data="M0,40 L25,36 L50,32 L75,26 L100,20"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource StockCard}" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="JNJ" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="-2.0%" Style="{StaticResource ValueRed}" Margin="0,6,0,0"/>
                        </StackPanel>
                        <Viewbox Grid.Column="1" Margin="16,0,0,0" Height="52">
                            <Path Style="{StaticResource SparklineDown}" Data="M0,10 L25,14 L50,22 L75,30 L100,36"/>
                        </Viewbox>
                    </Grid>
                </Border>
            </UniformGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
