                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource StockCard}" Margin="0,0,16,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="V" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="+0.9%" Style="{StaticResource ValueGreen}" Margin="0,6,0,0"/>
