                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="META" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
