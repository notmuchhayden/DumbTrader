                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="GOOG" Foreground="{StaticResource Brush.TextPrimary}" FontWeight="Bold" FontSize="14"/>
