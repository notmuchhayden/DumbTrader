                            <Path Style="{StaticResource SparklineUp}" Data="M0,40 L20,38 L40,30 L60,22 L80,16 L100,14"/>
                        </Viewbox>
                    </Grid>
                </Border>

                <Border Style="{StaticResource StockCard}" Margin="0,0,0,16">
                    <Grid>
