<Window x:Class="DumbTrader.Views.AboutWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="About" Height="220" Width="360" WindowStartupLocation="CenterOwner"
 Background="{StaticResource Brush.Background}">
 <Grid Margin="12">
 <StackPanel>
 <TextBlock Text="DumbTrader" FontSize="20" FontWeight="Bold" Foreground="{StaticResource Brush.TextPrimary}" />
 <TextBlock Text="Version0.1" Foreground="{StaticResource Brush.TextSecondary}" Margin="0,6,0,0" />
 <TextBlock Text="(C) Your Company" Foreground="{StaticResource Brush.TextSecondary}" Margin="0,6,0,14" />
 <TextBlock Text="A simple demo trading UI." Foreground="{StaticResource Brush.TextSecondary}" TextWrapping="Wrap" />
 <Button Width="80" Content="Close" HorizontalAlignment="Right" Margin="0,12,0,0" Click="Close_Click" />
 </StackPanel>
 </Grid>
</Window>
